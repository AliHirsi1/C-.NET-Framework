@model IEnumerable<EmployeeManagement.Models.EmployeeListViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class=" ="row">
            <div class="col-xs-12">
                <h1>Employees</h1>
                <p>Add a new employee</p>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Department</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model)
                            {
                                <tr>
                                    <td>@employee.Name</td>
                                    <td>@employee.Phone</td>
                                    <td>@employee.Department</td>
                                    <td>Edit</td>
                                    <td>Delete</td>
                                </tr>
                            }


                        </tbody>
                    </table>
                <div>

                </div>
            </div>
        </div>
        <script src="~/Scripts/jquery-3.2.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
